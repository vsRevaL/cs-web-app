@model Route
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">Új út hozzáadása</h2>
        </div>
    </div>
</section>
<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5></h5>
                            <p class="mt-3 mb-4">
                                Kérlek töltsd ki az összes mezőt az űrlapon.
                            </p>
                        </div>
                        <div class="hours">
                            <h6 class="mt-4">Kiindulási hely:</h6>
                            <p>Szöveg</p>

                            <h6 class="mt-4">Érkezési hely:</h6>
                            <p>Szöveg</p>

                            <h6 class="mt-4">Távolság (KM):</h6>
                            <p>Szám</p>

                            <h6 class="mt-4">Indulási időpont,</h6>
                            <p>DateTime formátum</p>

                            <h6 class="mt-4">Ülőhelyek száma:</h6>
                            <p>Egész szám</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5 contact-right">

                    @using (Html.BeginForm("AddNewRoute", "Admin", FormMethod.Post, new { @class = "signin-form" }))
                    {
                        <div class="input-grids">
                            @if (ViewBag.Succes != null || true)
                            {
                                <p style="color:forestgreen">@ViewBag.Success</p>
                            }
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.FromCity, new
                                   {
                                       @type = "text",
                                       @placeholder = "Honnan*",
                                       @class = "contact-input",
                                   })
                                @Html.ValidationMessageFor(m => m.FromCity, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.ToCity, new
                                   {
                                       @type = "text",
                                       @placeholder = "Hova*",
                                       @class = "contact-input",
                                   })
                                @Html.ValidationMessageFor(m => m.ToCity, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.When, new
                                   {
                                       @type = "datetime-local",
                                       @placeholder = "Időpont*",
                                       @class = "contact-input",
                                   })
                                @Html.ValidationMessageFor(m => m.When, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Km, new
                                   {
                                       @type = "number",
                                       @placeholder = "Távolság (KM)*",
                                       @class = "contact-input",
                                   })
                                @Html.ValidationMessageFor(m => m.Km, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Seats, new
                                   {
                                       @type = "number",
                                       @placeholder = "Ülőhelyek száma*",
                                       @class = "contact-input",
                                   })
                                @Html.ValidationMessageFor(m => m.Seats, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="text-right">
                            <button type="submit" class="btn btn-style btn-primary">Hozzáadás</button>
                            <button type="reset" class="btn btn-style btn-primary">Alaphelyzet</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>