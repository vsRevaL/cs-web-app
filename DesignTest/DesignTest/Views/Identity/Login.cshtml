@model Useer
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">Bejelentkezés</h2>
        </div>
    </div>
</section>


<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>Facts</h5>
                            <p class="mt-3 mb-4">
                                A telekocsi csökkenti az ismétlődő vagy hosszú távú közlekedés költségeit. <br />
                                <br />
                                A közös vezetés csökkentheti a vezetői stresszt is.<br />
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5 contact-right">

                    @using (Html.BeginForm("Login", "Identity", FormMethod.Post, new { @class = "signin-form" }))
                    {
                        <div class="input-grids">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Username, new
                                   {
                                       @placeholder = "Felhasználóneved*",
                                       @class = "contact-input",
                                   })
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Password, new
                                   {
                                       @type = "password",
                                       @placeholder = "Jelszavad*",
                                       @class = "contact-input",
                                   })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.ConfirmPassword, new
                                   {
                                       @type = "password",
                                       @placeholder = "Jelszó újra*",
                                       @class = "contact-input",
                                   })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="text-right">
                            <button type="submit" class="btn btn-style btn-primary">Bejelentkezés</button>
                            <button type="reset" class="btn btn-style btn-primary">Alaphelyzet</button>
                        </div>
                    }

                </div>

            </div>
        </div>
    </div>
</section>
