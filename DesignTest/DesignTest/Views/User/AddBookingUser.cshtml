@using DesignTest.Models;
@model Useer
@{
    Route selectedRoute = ViewBag.SelectedRoute;
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">Helyfoglalás</h2>
        </div>
    </div>
</section>

<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>A kiválasztott utad:</h5>
                            <p class="mt-3 mb-4">
                                Itt módosíthatod az adataidat is.
                                <br />
                            </p>
                        </div>
                        <div class="hours">
                            <h6 class="mt-4">Kiindulási hely:</h6>
                            <p>@selectedRoute.FromCity</p>

                            <h6 class="mt-4">Érkezési hely:</h6>
                            <p>@selectedRoute.ToCity</p>

                            <h6 class="mt-4">Távolság (KM):</h6>
                            <p>@selectedRoute.Km KM</p>

                            <h6 class="mt-4">Indulási időpont,</h6>
                            <p>@selectedRoute.When</p>

                            <h6 class="mt-4">Összes ülőhely / Foglalt helyek / Szabad helyek</h6>
                            <p>@selectedRoute.Seats / @selectedRoute.Bookings.Count / @(selectedRoute.Seats-selectedRoute.Bookings.Count)</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5 contact-right">

                    @using (Html.BeginForm("AddBookingUser", "User", FormMethod.Post, new { @class = "signin-form" }))
                    {
                        <div class="input-grids">

                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Id, new
                           {
                               @type = "text",
                               @placeholder = "",
                               @class = "contact-input",
                               @style = "display: none"

                           })
                            </div>


                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Username, new
                           {
                               @type = "text",
                               @placeholder = "",
                               @class = "contact-input",
                               @style = "display: none"

                           })
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Password, new
                           {
                               @type = "text",
                               @placeholder = "",
                               @class = "contact-input",
                               @style = "display: none"

                           })
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Name, new
                                   {
                                       @type = "text",
                                       @placeholder = "Neved*",
                                       @class = "contact-input",

                                   })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Address, new
                                   {
                                       @type = "text",
                                       @placeholder = "Címed*",
                                       @class = "contact-input",

                                   })
                                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, new
                                   {
                                       @type = "email",
                                       @placeholder = "Email címed*",
                                       @class = "contact-input",

                                   })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Phone, new
                                   {
                                       @type = "text",
                                       @placeholder = "Telefonszámod*",
                                       @class = "contact-input",

                                   })
                                @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="text-right">
                            <button type="submit" class="btn btn-style btn-primary">Jóváhagyás</button>
                            @Html.ActionLink("Visszalép", "Index", "Home", new { @class = "btn btn-style btn-primary" })
                        </div>
                    }

                </div>

            </div>
        </div>
    </div>
</section>
